{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "tfStateFileOperation",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::${account_id}:user/${iam_user_name}"
            },
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": "arn:aws:s3:::${bucket}/*"
        }
    ]
}